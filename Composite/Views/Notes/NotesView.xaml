<UserControl x:Name="userControl" x:Class="Composite.Views.Notes.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Composite.Views.Notes"
             xmlns:note="clr-namespace:Composite.ViewModels.Notes"
             xmlns:converter="clr-namespace:Composite.Common.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" FontFamily="Verdana">
    <UserControl.Resources>
        <converter:DateToStringConverter x:Key="DateToStringConverter"/>

        <Style TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding  Background}" BorderThickness="0.7" BorderBrush="Black">
                            <ContentPresenter Margin="5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="WhiteSmoke"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NoteMenu" TargetType="ContextMenu">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.3" ShadowDepth="1"/>
                            </Grid.Effect>
                            <Button Grid.Row="0" Content="Удалить" Click="ContextMenuButton_Click"
                                Command="{Binding DataContext.DeleteNoteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                            <Button Grid.Row="1" Content="Дублировать" Click="ContextMenuButton_Click"
                                    Command="{Binding DataContext.DuplicateNoteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="categoryMenu" TargetType="ContextMenu">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Grid Margin="10">
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.3" ShadowDepth="1"/>
                            </Grid.Effect>
                            <Button Grid.Row="0" Content="Удалить" Click="ContextMenuButton_Click"
                                Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomListViewItem" TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AddNoteButton" TargetType="Button">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="White" SnapsToDevicePixels="True" Height="210" Width="120">
                            <Border.Effect>
                                <DropShadowEffect Opacity="0.3" ShadowDepth="1"/>
                            </Border.Effect>
                            <TextBlock Text="{Binding Title}" FontSize="16" Margin="10" TextWrapping="Wrap" SnapsToDevicePixels="True" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="WhiteSmoke"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate DataType="{x:Type note:NoteVM}">
            <Button Margin="10,5,0,0" SnapsToDevicePixels="True" Width="180" Height="210" Background="{Binding Color}"
                    Command="{Binding DataContext.CheckPasswordNoteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ContextMenu>
                                            <ContextMenu Style="{StaticResource NoteMenu}"/>
                                        </Grid.ContextMenu>
                                        
                                        <TextBlock Grid.Row="0" Text="{Binding Title}" Margin="5" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                        
                                        <ScrollViewer x:Name="scroll" Grid.Row="1" Style="{StaticResource scrollMini}" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled"
                                                      Focusable="False">
                                            <TextBlock x:Name="content" Text="{Binding Content}" Margin="5,0" FontSize="13" Visibility="Collapsed" TextTrimming="CharacterEllipsis"/>
                                        </ScrollViewer>
                                        
                                        <Grid Grid.Row="2" Margin="5,0,5,3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding DateCreate, Converter={StaticResource DateToStringConverter}}" FontSize="13" VerticalAlignment="Center"/>
                                            
                                            <Image Grid.Column="1" x:Name="imageLock" Source="/Common/Images/lock.png" Height="18" Width="18" Visibility="Visible" HorizontalAlignment="Right" RenderOptions.BitmapScalingMode="Fant"/>
                                            
                                            <Image Grid.Column="2" x:Name="imageEye" Source="/Common/Images/eye.png" Margin="5,0,0,0" Height="18" Width="18" Visibility="Collapsed" HorizontalAlignment="Right" RenderOptions.BitmapScalingMode="Fant"/>

                                        </Grid>

                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Password.Length}" Value="0">
                                            <Setter TargetName="imageLock" Property="Visibility" Value="Hidden"/>
                                            <Setter TargetName="content" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Preview}" Value="True">
                                            <Setter TargetName="imageEye" Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Preview}" Value="True"/>
                                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter TargetName="scroll" Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                                                <Setter TargetName="scroll" Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
                                            </MultiDataTrigger.Setters>
                                        </MultiDataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="WhiteSmoke"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
        </DataTemplate>
        <DataTemplate DataType="{x:Type note:NoteButton}">
            <Button Margin="10,15,10,10" Style="{StaticResource AddNoteButton}"
                    Command="{Binding DataContext.AddNoteCommand,RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
        </DataTemplate>
        
        <Style x:Key="ButtonCategory" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="Gray" Margin="5,0,0,0" CornerRadius="3">
                            <ContentPresenter Margin="3">
                                <ContentPresenter.ContextMenu>
                                    <ContextMenu Style="{StaticResource categoryMenu}"/>
                                </ContentPresenter.ContextMenu>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="WhiteSmoke"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CategoryItem" TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Button Content="{Binding}" Style="{StaticResource ButtonCategory}" 
                                Command="{Binding DataContext.SelectedCategoryCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonSearch" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0.3,0,0,0" BorderBrush="Black">
                            <ContentPresenter Content="Поиск" Margin="7,0" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="WhiteSmoke"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ListView ItemsSource="{Binding Notes}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" BorderThickness="0" ItemContainerStyle="{StaticResource CustomListViewItem}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True" Width="{Binding ActualWidth, ElementName=userControl}"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </ScrollViewer>

        <Grid Grid.Row="1" Background="White" Margin="-1,5,-1,-1">
            <Grid.Effect>
                <DropShadowEffect Opacity="0.3" ShadowDepth="1"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource ImageButton}" Content="/Common/Images/addCategory.png" Height="20" Width="20" Margin="5" RenderOptions.BitmapScalingMode="Fant"
                    Command="{Binding NotesManagementViewModel.OpenViewAddCategoryCommand}"/>

            <TextBlock Grid.Column="1" Text="Категории" VerticalAlignment="Center" FontSize="14" Margin="5,5,0,5"/>

            <ListView Grid.Column="2" ItemsSource="{Binding NotesManagementViewModel.Categories}" ItemContainerStyle="{StaticResource CategoryItem}"
                      BorderThickness="0" Margin="4" VerticalAlignment="Center" Width="350" HorizontalAlignment="Left"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.Template>
                    <ControlTemplate TargetType="ListView">
                        <ScrollViewer Name="ScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" CanContentScroll="False" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </ControlTemplate>
                </ListView.Template>
            </ListView>

            <TextBox Grid.Column="3" Text="{Binding NotesManagementViewModel.TextSearch}" Style="{StaticResource CustomTextBoxSearch}"
                     VerticalContentAlignment="Center" TextOptions.TextFormattingMode="Ideal"/>

            <Button Grid.Column="4" Style="{StaticResource ButtonSearch}" Command="{Binding SearchNoteCommand}"/>

        </Grid>

    </Grid>

</UserControl>